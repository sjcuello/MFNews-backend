
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id            Int           @id @default(autoincrement())
  title         String        @unique
  subtitle      String
  description   String
  imageUrl      String
  author        String
  category      String
  content       String
  markAsDeleted Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
}

